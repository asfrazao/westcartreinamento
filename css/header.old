
/* header.css */
/* Estilos relacionados ao cabeçalho, incluindo a barra de navegação e o menu superior */

header#main-header {
  background-color: #fff;
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  z-index: 1000;
  box-shadow: 0 2px 5px rgba(0, 0, 0, 0.1);
}

.top-bar {
  background-color: #96AAC2;
  padding: 10px 20px;
  font-size: 0.9em;
  color: #fff;
  display: flex;
  justify-content: center;
  text-align: center;
}

header nav {
  display: flex;
  justify-content: space-between;
  align-items: center;
  width: 100%;
  padding: 10px 0;
}

.navbar-toggler {
  display: none;
  background: none;
  border: none;
  font-size: 2em;
  cursor: pointer;
  margin-left: 20px;
}

.navbar-toggler-icon {
  color: #3B52D9;
}

nav ul {
  list-style: none;
  margin: 0;
  padding: 0;
  display: flex;
  justify-content: center;
  flex-grow: 1;
}

nav ul li {
  margin: 0 15px;
}

nav ul li a {
  text-decoration: none;
  font-size: 1.1em;
  color: #3B52D9;
  font-weight: 500;
  transition: color 0.3s ease;
}

nav ul li a:hover {
  color: #25D366;
}

/* Ajustes para dispositivos móveis */
@media (max-width: 768px) {
  .navbar-toggler {
    display: block; /* Exibe o botão de hambúrguer em dispositivos móveis */
  }

  nav ul {
    display: none; /* Oculta o menu por padrão */
    flex-direction: column;
    align-items: center;
    background-color: #fff;
    padding: 20px;
    width: 100%;
    border-top: 1px solid #ddd;
    position: absolute;
    top: 100%;
    left: 0;
  }

  nav ul.show {
    display: flex; /* Mostra o menu quando a classe 'show' é adicionada */
  }

  nav ul li {
    margin: 10px 0;
  }
}
